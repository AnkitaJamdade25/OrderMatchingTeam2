<Page x:Class="orderMatchingHome.Pending"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:orderMatchingHome"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Pending">

    <StackPanel>
        <Label Content="PENDING ORDERS" HorizontalContentAlignment="Center"></Label>
        <DataGrid >
            <DataGrid.Columns >
               
                <DataGridTextColumn Width="*" Header="S.No." />
                <DataGridTextColumn Width="*" Header="ISIN" />
                <DataGridTextColumn Width="*" Header="OrderID" />
                <DataGridTextColumn Width="*" Header="Quantity" />
                <DataGridTextColumn Width="*" Header="Price" />
                <DataGridTextColumn Width="*" Header="Total" />
                <DataGridTextColumn Width="*" Header="CMP" />
                <DataGridTextColumn Width="*" Header="PnL" />
            </DataGrid.Columns>
          
        </DataGrid>
    </StackPanel>
</Page>
