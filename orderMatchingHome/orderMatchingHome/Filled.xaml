<Page x:Class="orderMatchingHome.Filled"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:orderMatchingHome"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Filled">

    <StackPanel>
        <Label Content="PENDING ORDERS" HorizontalContentAlignment="Center"></Label>
        <DataGrid>
            <DataGrid.Columns >

                <DataGridTextColumn Width="*" Header="S.No." />
                <DataGridTextColumn Width="*" Header="ISIN" />
                <DataGridTextColumn Width="*" Header="BuyOrderID" />
                <DataGridTextColumn Width="*" Header="SellOrderID" />
                <DataGridTextColumn Width="*" Header="TradeID" />
                <DataGridTextColumn Width="*" Header="Quantity" />
                <DataGridTextColumn Width="*" Header="Price" />
                <DataGridTextColumn Width="*" Header="Total" />
               
            </DataGrid.Columns>

        </DataGrid>
    </StackPanel>
</Page>
